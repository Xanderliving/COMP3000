<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#BABABA"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/TitleBack"
        android:layout_width="423dp"
        android:layout_height="195dp"
        app:srcCompat="@drawable/picture2"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="273dp"
        android:layout_height="173dp"
        android:fontFamily="@font/irish_grover"
        android:text="Pick           'n' Mixologist"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/WhatsNewbtn"
        android:layout_width="160dp"
        android:layout_height="202dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="228dp"
        android:background="@drawable/dotted"
        android:fontFamily="@font/irish_grover"
        android:text="WHATS  NEW"
        android:textSize="22dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MYObtn"
        android:layout_width="333dp"
        android:layout_height="89dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/dotted"
        android:fontFamily="@font/irish_grover"
        android:text="MAKE YOUR OWN"
        android:textSize="22dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/Settingsbtn"
        android:layout_width="333dp"
        android:layout_height="89dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/dotted"
        android:fontFamily="@font/irish_grover"
        android:text="Settings"
        android:textSize="22dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MYObtn" />

    <Button
        android:id="@+id/button4"
        android:layout_width="164dp"
        android:layout_height="195dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/dotted"
        android:fontFamily="@font/irish_grover"
        android:text="PRE MADE COCKTAILS"
        android:textSize="22dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleBack" />


</androidx.constraintlayout.widget.ConstraintLayout>