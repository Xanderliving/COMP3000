<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CocktailsActivity">


    <Button
        android:id="@+id/dropdown_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="22dp"
        android:text="Dropdown Menu 1"
        app:layout_constraintBottom_toTopOf="@+id/dropdown_button2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/dropdown_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="24dp"
        android:text="Dropdown Menu 2"
        app:layout_constraintBottom_toTopOf="@+id/dropdown_button3"
        app:layout_constraintTop_toBottomOf="@+id/dropdown_button1"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/dropdown_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="21dp"
        android:text="Dropdown Menu 3"
        app:layout_constraintBottom_toTopOf="@+id/dropdown_button4"
        app:layout_constraintTop_toBottomOf="@+id/dropdown_button2"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/dropdown_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="430dp"
        android:text="Dropdown Menu 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdown_button3"
        tools:layout_editor_absoluteX="7dp" />

</androidx.constraintlayout.widget.ConstraintLayout>